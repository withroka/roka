{
  "name": "@roka/forge",
  "version": "0.0.2",
  "exports": {
    ".": "./forge.ts",
    "./bump": "./bump.ts",
    "./changelog": "./changelog.ts",
    "./compile": "./compile.ts",
    "./package": "./package.ts",
    "./release": "./release.ts",
    "./version": "./version.ts"
  },
  "compile": {
    "main": "forge.ts",
    "permissions": {
      "env": ["GIT_NAME", "GIT_EMAIL", "GITHUB_TOKEN", "HOME"],
      "read": true,
      "write": true,
      "net": "api.github.com",
      "run": ["deno", "git"],
      "prompt": true
    }
  }
}
