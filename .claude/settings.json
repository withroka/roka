{
  "env": {
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "hooks": {
    "SessionStart": [{
      "matcher": "startup|resume",
      "hooks": [{
        "type": "command",
        "command": "sh \"$CLAUDE_PROJECT_DIR/.claude/hooks/startup.sh\""
      }]
    }]
  },
  "alwaysThinkingEnabled": true
}
